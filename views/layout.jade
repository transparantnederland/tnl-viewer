doctype html
html
  head
    link( rel='stylesheet', href='/stylesheets/style.css' )
    script( src='/javascripts/ajaxRequest.js' )
    script( src='/javascripts/basic.js' )
    script( src='/javascripts/viewer.js' )
  body
    header#header.header.cf.mainHeader( role="banner" )
      nav( role="navigation" )
        ul.menu.cf
          li
            a.logo( href="http://transparantnederland.nl" )
          li.searchHeader
            input#search( list="autosuggest", placeholder="zoeken" )
            datalist#autosuggest
    block content

    template#searchresult
      li
        h3
          a
        p.type
          span.label type
          span.typetext
        p.source
          span.label bron
          span.sourcetext

    template#filtergroup
      li
        h3
        ul

    template#filteritem
      li
        input.filter( type="checkbox" )
        span.name
        |  (
        span.count
        | )

    template#pit
      .pit
        h2
        p
          span.label bron
          span.sourcetext
        table.related-pits
          thead
            tr
              td.type
              td.relation relatie
              td.period periode
          tbody

    template#relation
      tr
        td.name
          a
        td.relation
        td.period